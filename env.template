# AWS配置
AWS_REGION=ap-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# CDN配置
CDN_BASE_URL=https://your-cdn-domain.com

# 浏览器配置
BROWSER_POOL_SIZE=1                    # 浏览器池大小，默认1个实例
BROWSER_PAGE_POOL_SIZE=10              # 每个浏览器的页面池大小，默认10个页面
BROWSER_TIMEOUT=60s
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/138.0.0.0 Safari/537.36

# 高配服务器性能优化配置
BROWSER_MAX_CONCURRENT=20              # 最大并发页面数
BROWSER_RENDERER_PROCESSES=16          # 渲染进程数（高配服务器）
BROWSER_WEBGL_CONTEXTS=8               # WebGL上下文数（高配服务器）
BROWSER_MEMORY_LIMIT=2048              # 内存限制(MB)

# Mafit配置
MAFIT_BASE_URL=https://mafit.fun
MAFIT_JWT_TOKEN=your-jwt-access-token
MAFIT_SIDEBAR_SHEET=off

